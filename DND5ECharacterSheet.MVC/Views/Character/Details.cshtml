                        <td>13</td>
                        <td>Brutal Critical (2 die)</td>
                        <td>5</td>
                        <td>+3</td>
                    </tr>
                    @*LEVEL 14*@
                    <tr>
                        <td>14</td>
                        <td>Path Feature</td>
                        <td>5</td>
