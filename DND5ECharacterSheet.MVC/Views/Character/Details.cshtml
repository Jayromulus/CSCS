                    <tr>
                        <th>Level</th>
                        <th>Features</th>
                        <th>Rages</th>
                        <th>Rage Damage</th>
                    </tr>
                    @*LEVEL 1*@
                    <tr>
                        <td>1</td>
                        <td>Rage, Unarmoured Defense</td>
                        <td>2</td>
                        <td>+2</td>
                    </tr>
                    @*LEVEL 2*@
                    <tr>
                        <td>2</td>
                        <td>Reckless Attack, Danger Sense</td>
                        <td>2</td>
                        <td>+2</td>
                    </tr>
                    @*LEVEL 3*@
                    <tr>
                        <td>3</td>
                        <td>Primal Path</td>
                        <td>3</td>
                        <td>+2</td>
                    </tr>
                    @*LEVEL 4*@
                    <tr>
                        <td>4</td>
                        <td>Ability Score Improvement</td>
                        <td>3</td>
                        <td>+2</td>
                    </tr>
                    @*LEVEL 5*@
                    <tr>
                        <td>5</td>
                        <td>Extra Attack, Fast Movement</td>
                        <td>3</td>
                        <td>+2</td>
                    </tr>
                    @*LEVEL 6*@
                    <tr>
                        <td>6</td>
