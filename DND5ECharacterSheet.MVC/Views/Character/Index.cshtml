@model IEnumerable<DND5ECharacterSheet.Models.CharacterListItem>

@{
    ViewBag.Title = "Index";
}



<div class="container">

    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="row">
            <div class="col-xs-12" style="padding: 5%">
                <div class="card-background" style="border-radius: 5px; height: 15vh; line-height: 15vh; font-size: 20pt; text-align: center">
                    <span style="color: black; text-decoration: none;">
                        @Html.ActionLink("+ Add New Item", "Create")
                    </span>
                </div>
            </div>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class="row">
                <div class="col-xs-12" style="padding: 5%">
                    <div class="card-background" style="border-radius:5px; padding: 2.5% 5%; height: 15vh;">

                        <div style="font-size: 18pt">
                            @Html.DisplayFor(modelItem => item.CharacterName)

                        </div>

                        <div style="font-size: 14pt; text-align: right">
                            @Html.DisplayFor(modelItem => item.RaceName)  @Html.DisplayFor(modelItem => item.ClassName)
                            <br />
                            Level: @Html.DisplayFor(modelItem => item.Level)
                        </div>


                            @Html.ActionLink("Edit", "Edit", new { id = item.CharacterId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.CharacterId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.CharacterId })


                    </div>
                </div>
            </div>
        </div>
    }
</div>


