@model DND5ECharacterSheet.Models.WeaponDetails

@{
    ViewBag.Title = "Details";
}

<div>
    <div id="main" style="display:contents">
        <div class="row" style="margin-top: 2%; padding: 2.5% 5%">
            <div class=" card-background col-xs-12 col-sm-6 col-sm-offset-3" style="margin-bottom: 2%; padding: 0 5%">
                <div class="row">
                    <div class="col-xs-6">

                        <h3>
                            @Html.DisplayFor(model => model.Name)
                        </h3>
                    </div>
                    <div class="col-xs-6" style="text-align: right">

                        <h3>
                            @Html.DisplayFor(model => model.CostInCurrency) @Html.DisplayFor(model => model.CurrencyRequired)
                        </h3>
                    </div>

                    <div class="col-xs-12" style="text-align: center">
                        <h3>
                            Damage: @Html.DisplayFor(model => model.DamageDieAmount)<span>d</span>@Html.DisplayFor(model => model.DamageDieSize) @Html.DisplayFor(model => model.DamageType)
                        </h3>
                    </div>
                    <div class="col-xs-12">

                        @if (Model.Properties != null)
                        {
                            <h3>
                                Properties: @Html.DisplayFor(model => model.Properties)
                            </h3>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">

                        <h3>
                            @Html.DisplayFor(model => model.WeightInPounds) lb.
                        </h3>
                    </div>
                    <div class="col-xs-6" style="text-align: right">
                        @if (Model.IsMartialWeapon)
                        {
                            <h3 style="display: inline">
                                Martial
                            </h3>
                        }
                        else
                        {
                            <h3 style="display: inline">
                                Simple
                            </h3>
                        }
                        @if (Model.IsMeleeWeapon)
                        {
                            <h3 style="display: inline">
                                Melee Weapon
                            </h3>
                        }
                        else
                        {
                            <h3 style="display: inline">
                                Ranged Weapon
                            </h3>
                        }
                    </div>
                </div>

                <div class="row" style="padding: 2%; margin-bottom: 1.5%">
                    @if (Model.WeaponId > 37)
                    {
                        <div class="col-xs-6" style="padding: 0">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.WeaponId }, new { @class = "btn btn-warning", type = "button" })
                        </div>
                    }
                    else
                    {
                        <div class="col-xs-6"></div>
                    }
                    <div class="col-xs-6" style="text-align: right; padding: 0">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success", type = "button" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

