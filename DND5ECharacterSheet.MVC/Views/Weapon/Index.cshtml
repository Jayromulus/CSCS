@model IEnumerable<DND5ECharacterSheet.Models.WeaponListItem>

@{
    ViewBag.Title = "Index";
}

<div class="container">

    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="row">
            <div class="col-xs-12" style="padding: 5%">
                <div class="card-background" style="border-radius: 5px; height: 15vh; line-height: 15vh; font-size: 20pt; text-align: center">
                    <span style="color: black; text-decoration: none;">
                        @Html.ActionLink("+ Add New Item", "Create")
                    </span>
                </div>
            </div>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class="row">
                <div class="col-xs-12" style="padding: 5%">
                    <div class="card-background" style="border-radius:5px; padding: 2.5% 5%; height: 15vh;">

                        <div style="font-size: 15pt">
                            @Html.DisplayFor(modelItem => item.Name)
                            <span style="float:right; font-size: 12pt">
                                @Html.DisplayFor(modelItem => item.CostInCurrency)  @Html.DisplayFor(modelItem => item.CurrencyRequired)
                            </span>
                        </div>


                        @if (item.IsMartialWeapon)
                        {
                            <div style="display:inline">Martial </div>
                        }
                        else
                        {
                            <div style="display:inline">Simple </div>
                        }

                        @if (item.IsMeleeWeapon)
                        {
                            <div style="display:inline">Melee Weapon</div>
                        }
                        else
                        {
                            <div style="display:inline">Ranged Weapon</div>
                        }



                        @if (item.WeaponId > 37)
                        {
                            <div class="details-height">
                                @Html.ActionLink("Edit", "Edit", new { id = item.WeaponId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.WeaponId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.WeaponId })
                            </div>
                        }
                        else
                        {
                            <div class="details-height">
                                @Html.ActionLink("Details", "Details", new { id = item.WeaponId })
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    }
</div>