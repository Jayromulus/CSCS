@model IEnumerable<DND5ECharacterSheet.Models.ArmourListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostInCurrency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArmourType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostInCurrency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArmourType)
            </td>
            @if (item.ArmourId > 13)
            {

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ArmourId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ArmourId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ArmourId })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ArmourId })
                </td>
            }
        </tr>
    }

</table>
