@model IEnumerable<DND5ECharacterSheet.Models.ArmourListItem>

@{
    ViewBag.Title = "Index";
}


<div class="container" style="margin-bottom: 7.5%">

    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="row">
            <div class="col-xs-12" style="padding: 5%">
                <div class="card-background" style="border-radius: 5px; height: 15vh; line-height: 15vh; font-size: 20pt; text-align: center">
                    <span style="color: black; text-decoration: none;">
                        @Html.ActionLink("+ Add New Item", "Create")
                    </span>
                </div>
            </div>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class="row">
                <div class="col-xs-12" style="padding: 5%">
                    <div class="card-background" style="border-radius:5px; padding: 2.5% 5%; height: 15vh;">

                        <div style="font-size: 15pt">
                            @Html.DisplayFor(modelItem => item.Name)
                            <span style="float:right; font-size: 12pt">
                                @Html.DisplayFor(modelItem => item.CostInCurrency)  @Html.DisplayFor(modelItem => item.CurrencyRequired)
                            </span>
                        </div>


                        @if (item.ArmourType == "Shield")
                        {
                            @Html.DisplayFor(modelItem => item.ArmourType)
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.ArmourType) <span>Armour</span>
                        }

                        @if (item.ArmourId > 13)
                        {
                            <div class="details-height">

                                @Html.ActionLink("Edit", "Edit", new { id = item.ArmourId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ArmourId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ArmourId })
                            </div>
                        }
                        else
                        {
                            <div class="details-height">

                                @Html.ActionLink("Details", "Details", new { id = item.ArmourId })
                            </div>
                        }



                    </div>
                </div>
            </div>
        </div>
    }
</div>
